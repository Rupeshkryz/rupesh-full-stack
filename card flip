<----------------------------------------------------------css------------------------------------------------------------->
.flip-card {
    background-color: transparent;
    margin-top: 10px;
    margin-left: 10px;
    margin-bottom: 10px;
    perspective: 1000px;
    float: left;

    transition: transform 2s;
    transform-style: preserve-3d;
    cursor: pointer;
  }


  .flip-box-inner {
    position: relative;
    width: 200px;
    height: 200px;
    text-align: center;
    transition: transform 1.0s;
    transform-style: preserve-3d;
  }

  /* .flip-card:hover .flip-box-inner {
    transform: rotateY(180deg);
  } */
  
  
  .front, .back {
    position: absolute;
    display: flex;
    flex-direction: column;
    width: 200px;
    height: 200px;
    backface-visibility: hidden;
  }
  
  .front {
    background-color: coral;
    color: black;
  }
  
  .back {
    background-color: #2980b9;
    color: white;
    transform: rotateY(180deg);
  }
